<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="user_list">
    <% @tasks.each do |task| %>
      <%= render "task", task: task %>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path, class: "btn btn-info" %>